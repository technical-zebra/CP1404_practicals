BoxLayout:
    orientation: 'vertical'
    BoxLayout:
        orientation: 'horizontal'
        TextInput:
            id: input_label
            font_size: 48
            multiline: False
            on_text: app.calculate_km(input_label.text)
        BoxLayout:
            orientation: 'vertical'
            size_hint_x: 0.25
            Button:
                text: 'Up'
                on_press: app.handle_increment(input_label.text, 1)

            Button:
                text: 'Down'
                on_press: app.handle_increment(input_label.text, -1)


    Button:
        text: 'Convert mile to km'
        font_size: 20
        on_press: app.calculate_km(input_label.text)

    Label:
        id: output_label
        text: app.output_km
        font_size: 20
        color: (1, 1, 0, 1)